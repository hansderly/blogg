<section class="wrapper">
  <%= link_to "/users", remote: false do %>
    <span class="">back arrow_back_ios</span>
  <% end %>

  <div class="new-post-wrapper">
    <h2>New blod</h2>
  </div>

  <div class="form-wrapper">
    <%= form_with model: @post do |form| %>
      <% if form.object.errors.any? %>
        <div>
          <% form.object.errors.full_messages.each do |message| %>
            <div><%= message %></div>
          <% end %>
        </div>
      <% end %>
      <div class="field">
        <%= form.label :title %>
        <%= form.text_field :title %>
      </div>
      <div class="field">
        <%= form.label :text %>
        <%= form.text_area :text %>
      </div>
      <%= form.button %>
    <% end %>
  </div>
</section>
